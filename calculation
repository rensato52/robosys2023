import sys
def tonum(s):
    try:
        return int(s)
    except:
        return float(s)

ans1 = 0
ans2 = 0
ans3 = 1
ans4 = 1

for line in sys.stdin:
    ans1 += tonum(line)
    ans2 -= tonum(line)
    ans3 *= tonum(line)
    ans4 /= tonum(line)

print(f'和:{ans1}, 差:{ans2}, 積:{ans3}, 商:{ans4}')

